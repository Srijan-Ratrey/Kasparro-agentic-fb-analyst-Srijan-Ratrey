{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Creatives Schema",
  "type": "object",
  "required": ["analysis_id", "timestamp", "recommendations"],
  "properties": {
    "analysis_id": {"type": "string"},
    "timestamp": {"type": "string", "format": "date-time"},
    "recommendations": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "type": {"type": "string"},
          "priority": {"type": "string"},
          "recommendation": {"type": "string"},
          "rationale": {"type": "string"},
          "supporting_insights": {"type": "array", "items": {"type": "string"}},
          "confidence": {"type": "number", "minimum": 0, "maximum": 1},
          "expected_uplift": {"type": "number"},
          "supporting_metrics": {"type": "object"},
          "ab_tests": {"type": "object"}
        },
        "required": ["recommendation"]
      }
    },
    "creative_suggestions": {"type": "array"},
    "templates": {"type": "array"},
    "priority": {"type": "object"}
  }
}
